#!/bin/bash

# $1 is the argument passed from tmux
# We use 'unknown' if $1 is empty to prevent errors
current_command=${1:-unknown}

case "$current_command" in
  "vim"|"nvim"|"vi"|"nano")
    icon="ğŸ“ EDIT"
    ;;
  "ssh")
    icon="â˜ï¸ SSH"
    ;;
  "python"|"python3")
    icon="ğŸ PY"
    ;;
  "git")
    icon="ğŸŒ± GIT"
    ;;
  "zsh"|"bash"|"sh")
    icon="ğŸ’» TERM"
    ;;
  *)
    # FIX: Use 'tr' to uppercase, which works on ALL shells (dash/sh/bash)
    upper_cmd=$(echo "$current_command" | tr '[:lower:]' '[:upper:]')
    icon="âš¡ $upper_cmd" 
    ;;
esac

echo " $icon "
